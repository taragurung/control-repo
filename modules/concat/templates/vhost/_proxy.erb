<% if @proxy_dest or @proxy_pass or @proxy_pass_match -%>

  ## Proxy rules
  ProxyRequests Off
<%- end -%>
<% [@proxy_pass_match].flatten.compact.each do |proxymatch| -%>
  ProxyPassMatch   <%= proxymatch['path'] %> <%= proxymatch['url'] %>
<% end -%>
<% [@proxy_pass].flatten.compact.each do |proxy| -%>
  ProxyPass <%= proxy['path'] %> <%= proxy['url'] %>
  <Location <%= proxy['path']%>/>
    ProxyPassReverse /
  </Location>
<% end -%>
<% Array(@no_proxy_uris).each do |uri| -%>
  ProxyPass        <%= uri %> !
<% end -%>
<% if @proxy_dest -%>
  ProxyPass          / <%= @proxy_dest %>/
  <Location          />
    ProxyPassReverse /
  </Location>
<% end -%>
